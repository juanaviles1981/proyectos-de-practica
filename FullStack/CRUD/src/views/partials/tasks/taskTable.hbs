{{#if tasks}}
  <table class="table table-bordered table-hover table-dark">
    <thead>
      <tr>
        <th>N.</th>
        <th>Titulo</th>
        <th>Descripci√≥n</th>
        <th>Operaciones</th>
      </tr>
    </thead>
    <tbody>

      {{#each tasks}}
        <tr>
          <td>
            {{@index}}
            {{! Viene del propio each }}
          </td>
          <td>
            {{title}}
          </td>
          <td>
            {{description}}
          </td>
          <td>

            {{#if done}}
              <a href="/toggleDone/{{_id}}" class="btn btn-dark">Pendiente</a>
            {{else}}
              <a
                href="/toggleDone/{{_id}}"
                class="btn btn-success"
              >Completada</a>
            {{/if}}

            <a href="/delete/{{_id}}" class="btn btn-danger">Eliminar</a>

            <a href="/edit/{{_id}}" class="btn btn-info">Actualizar</a>
          </td>
        </tr>

      {{/each}}
    </tbody>
  </table>

{{else}}

  <div class="h-100 d-flex align-items-center justify-content-center">

    <div class="text-center text-white">
      <h1>No hay tareas</h1>
      <img src="icons/tareas.svg" class="w-75" />
    </div>

  </div>

{{/if}}